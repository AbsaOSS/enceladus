<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="components.home.landingPage" xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Menas" enableScrolling="false">
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="Menas" />
                </contentMiddle>
                <contentRight>
                    <core:Fragment type="XML" fragmentName="components.userInfo" />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <FlexBox height="100px" alignItems="Start" justifyContent="Center" class="sapUiResponsiveMargin">
                <items>
                    <GenericTile header="Datasets" class="sapUiResponsiveMargin" press="masterNavigate">
                        <customData>
                            <core:CustomData key="target" value="datasets"></core:CustomData>
                        </customData>
                        <tileContent>
                            <TileContent>
                                <NumericContent icon="sap-icon://database" value="{/landingPageInfo/totalNumberDatasets}"></NumericContent>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <GenericTile header="Schemas" class="sapUiResponsiveMargin" press="masterNavigate">
                        <customData>
                            <core:CustomData key="target" value="schemas"></core:CustomData>
                        </customData>
                        <tileContent>
                            <TileContent>
                                <NumericContent icon="sap-icon://SAP-icons-TNT/constrains" value="{/landingPageInfo/totalNumberSchemas}"></NumericContent>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <GenericTile header="Mapping Tables" class="sapUiResponsiveMargin" press="masterNavigate">
                        <customData>
                            <core:CustomData key="target" value="mappingTables"></core:CustomData>
                        </customData>
                        <tileContent>
                            <TileContent>
                                <NumericContent icon="sap-icon://SAP-icons-TNT/value-mapping" value="{/landingPageInfo/totalNumberMappingTables}"></NumericContent>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                </items>
            </FlexBox>
        </content>
    </Page>
</core:View>
