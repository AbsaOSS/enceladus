<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
                         xmlns:t="sap.ui.table"
                         xmlns:hdfs="components.hdfs">
    <Dialog id="addMappingTableDialog" title="{entity>/title} Mapping Table" resizable="true" draggable="true"
            class="minW40rem">
        <content>
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm adjustLabelSpan="true" editable="true">
                    <form:content>
                        <Label text="Mapping Table Name"/>
                        <Input id="newMappingTableName"
                               enabled="{path:'entity>/isEdit', formatter:'Formatters.not'}"
                               type="Text" placeholder="Enter mapping table name" width="100%"
                               value="{entity>/name}" change="onNameChange"/>
                        <Label text="Mapping Table Description"/>
                        <Input id="newMappingTableDescription" type="Text" placeholder="Enter mapping table description"
                               width="100%"
                               value="{entity>/description}"/>
                        <core:Fragment type="XML" fragmentName="components.schema.selector.schemaSelector"/>
                        <Label text="Mapping table folder path"/>
                        <VBox>
                            <HBox>
                                <!-- HDFS Browser input -->
                                <Input type="Text" id="selectedHDFSPathLabel" visible="{entity>/hdfsBrowserEnabled}">
                                    <layoutData>
                                        <FlexItemData growFactor="5"/>
                                    </layoutData>
                                </Input>
                                <!-- Simple field as an alternative -->
                                <Input id="addMtSimplePath" type="Text" placeholder="Mapping table path"
                                       value="{entity>/hdfsPath}"
                                       visible="{path:'entity>/hdfsBrowserEnabled', formatter:'Formatters.not'}">
                                    <layoutData>
                                        <FlexItemData growFactor="5"/>
                                    </layoutData>
                                </Input>
                                <Button id="toggleHdfsBrowser" icon="sap-icon://journey-change"
                                        tooltip="{= ${entity>/hdfsBrowserEnabled}? 'Switch to simple path editing' : 'Switch to HDFS Browser editing' }"/>
                            </HBox>
                            <hdfs:HDFSBrowser id="addMtHDFSBrowser" height="300px" width="100%"
                                              busyControl="addMappingTableDialog" visible="{entity>/hdfsBrowserEnabled}"
                                              pathInput="selectedHDFSPathLabel"
                                              HDFSPath="{entity>/hdfsPath}"/>

                        </VBox>
                        <Label text="Filter"/>
                        <Text text="{entity>/filterJson}"/>
                        <Label text="Filter Tree" />
<!-- tried this, too, for the treetable, but same result: rows="{path:'treeModel>/'}"-->
                        <t:TreeTable id="filterTreeEdit"
                            >
                            <t:columns>
                                <t:Column label="FilterName">
                                    <t:template>
                                        <Text text="{treeModel>_t}"/>
                                    </t:template>
                                </t:Column>
                                <t:Column label="Column">
                                    <t:template>
                                        <Input type="Text" value="{treeModel>columnName}" visible="{= !!${treeModel>columnName}}" />
                                    </t:template>
                                </t:Column>
                                <t:Column label="Value">
                                    <t:template>
                                        <Input type="Text" value="{treeModel>value}" visible="{= !!${treeModel>value}}"/>
                                    </t:template>
                                </t:Column>

                                <t:Column label="ValueType">
                                    <t:template>
                                        <Input type="Text" value="{treeModel>valueType}" visible="{= !!${treeModel>valueType}}"/>
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:TreeTable>

                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button id="newMappingTableAddButton" text="Save" icon="sap-icon://save" press="onMTSubmit"/>
            <Button id="newMappingTableCancelButton" text="Cancel" icon="sap-icon://cancel" press="onMTCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
