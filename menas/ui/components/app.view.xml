<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="components.app"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<SplitApp id="menasApp" mode="HideMode">
		<masterPages>
			<Page>
				<customHeader>
					<Bar>
						<contentLeft>
							<Button id="Navigation" icon="sap-icon://menu" press="handleMenuPress"></Button>
						</contentLeft>
						<contentMiddle>
							<Title text="Navigation" level="H3"></Title>
						</contentMiddle>
					</Bar>
				</customHeader>
				<List>
					<items>
						<ActionListItem id="Runs" text="Runs" type="Active" press="onRunsPress"></ActionListItem>
						<ActionListItem id="Schemas" text="Schemas" type="Active" press="onSchemaPress"></ActionListItem>
						<ActionListItem id="Datasets" text="Datasets" type="Active" press="onDatasetPress"></ActionListItem>
						<ActionListItem id="MappingTables" text="Mapping Tables" type="Active" press="onMappingPress"></ActionListItem>
					</items>
				</List>
				<footer>
					<Bar>
						<contentMiddle>
							<Label text="Menas v. {/menasVersion}"></Label>
						</contentMiddle>
					</Bar>
				</footer>
			</Page>
		</masterPages>
	</SplitApp>
</core:View>
