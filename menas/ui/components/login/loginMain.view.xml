<core:View id="loginMainView" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
		   controllerName="components.login.loginMain">
	<Page title="Login" enableScrolling="true">
		<content>
			<VBox id="loginForm" fitContainer="true" justifyContent="Center" alignItems="Center">
				<items>
					<Input type="Text" id="username" placeholder="username" value="{login>/username}" submit="onLoginSubmit"/>
					<Input type="Password" id="password" placeholder="password" value="{login>/password}" submit="onLoginSubmit"/>
					<Button width="10rem" text="Login" type="Emphasized" id="loginSubmit"/>
				</items>
			</VBox>
		</content>
	</Page>
</core:View>
