<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:hdfs="components.hdfs">
    <Dialog id="addDatasetDialog" title="New Dataset" stretchOnPhone="true"  class="minW40rem">
        <content>
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm adjustLabelSpan="true" editable="true">
                    <form:content>
                        <Label text="Dataset Name"/>
                        <Input id="newDatasetName" enabled="{path:'entity>/isEdit', formatter:'Formatters.not'}"
                               type="Text" placeholder="Dataset name*" width="100%" value="{entity>/name}"/>
                        <Label text="Dataset Description"/>
                        <Input id="newDatasetDescription" type="Text" placeholder="Description" width="100%"
                               value="{entity>/description}"/>
                        <core:Fragment type="XML" fragmentName="components.schemaSelector" />
                        <Label text="HDFS raw data folder path" />
                        <hdfs:HDFSBrowser id="newDatasetRawHDFSBrowser" height="300px" width="100%" busyControl="addDatasetDialog"
                            pathLabel="selectedRawHDFSPathLabel" restURI="api/hdfs/list" HDFSPath="{entity>/hdfsPath}"></hdfs:HDFSBrowser>
                        <Label text="RAW HDFS Path"></Label>
                        <Text id="selectedRawHDFSPathLabel"></Text>
                        <Label text="HDFS conformed data publish folder path" />
                        <hdfs:HDFSBrowser id="newDatasetPublishHDFSBrowser" height="300px" width="100%" busyControl="addDatasetDialog"
                            pathLabel="selectedPublishHDFSPathLabel" restURI="api/hdfs/list" HDFSPath="{entity>/hdfsPublishPath}"></hdfs:HDFSBrowser>
                        <Label text="Publish HDFS Path"></Label>
                        <Text id="selectedPublishHDFSPathLabel"></Text>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button id="newDatasetAddButton" text="Save" icon="sap-icon://accept" />
            <Button id="newDatasetCancelButton" text="Cancel" icon="sap-icon://cancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
