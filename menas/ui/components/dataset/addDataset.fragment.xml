<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
                         xmlns:hdfs="components.hdfs">
    <Dialog id="addDatasetDialog" title="{entity>/title} Dataset" stretchOnPhone="true" class="minW55rem maxW65p w50p">
        <content>
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm adjustLabelSpan="true" editable="true">
                    <form:content>
                        <Label text="Dataset Name"/>
                        <Input id="newDatasetName" enabled="{path:'entity>/isEdit', formatter:'Formatters.not'}"
                               type="Text" placeholder="Dataset name*" width="100%" value="{entity>/name}"/>
                        <Label text="Dataset Description"/>
                        <Input id="newDatasetDescription" type="Text" placeholder="Description" width="100%"
                               value="{entity>/description}"/>
                        <core:Fragment type="XML" fragmentName="components.schema.selector.schemaSelector"/>
                        <Label text="HDFS raw data folder path"/>
                        <VBox>
                            <Input type="Text" id="selectedRawHDFSPathLabel"/>
                            <hdfs:HDFSBrowser id="newDatasetRawHDFSBrowser" height="250px" width="100%"
                                          busyControl="addDatasetDialog"
                                          pathInput ="selectedRawHDFSPathLabel" restURI="api/hdfs/list"
                                          HDFSPath="{entity>/hdfsPath}"/>
                        </VBox>
                        <Label text="HDFS conformed data publish folder path"/>
                        <VBox>
                            <Input type="Text" id="selectedPublishHDFSPathLabel"/>
                            <hdfs:HDFSBrowser id="newDatasetPublishHDFSBrowser" height="250px" width="100%"
                                          busyControl="addDatasetDialog"
                                          pathInput="selectedPublishHDFSPathLabel" restURI="api/hdfs/list"
                                          HDFSPath="{entity>/hdfsPublishPath}"/>
                        </VBox>
                        <Label text="Dataset Properties"/>
                        <List width="100%" items="{entity>/_properties}">
                          <InputListItem class="inputListItemSmallLabel" label="{entity>name}" tooltip="{entity>description}">
                            <HBox alignItems="Center" justifyContent="End">
                                <Input type="Text" width="12rem" visible="{= ${entity>propertyType/_t} === 'StringPropertyType'}" class="propertyInput"
                                    value="{entity>value}" valueState="{entity>validation}" valueStateText="{entity>validationText}"></Input>
                                <Select width="12rem" items="{path: 'entity>propertyType/allowedValues', templateShareable: false}" 
                                    selectedKey="{entity>value}" valueState="{entity>validation}" valueStateText="{entity>validationText}"
                                    visible="{= ${entity>propertyType/_t} === 'EnumPropertyType'}">
                                    <core:Item key="{entity>value}" text="{entity>value}"></core:Item>
                                </Select>
                                <ObjectStatus text="{entity>essentiality/_t}" class="essentialityStatus"></ObjectStatus>
                                <core:Icon width="1rem" class="sapUiSmallMarginBegin" color="Neutral"
                                    src="{= ${entity>essentiality/_t} === 'Mandatory' ? 'sap-icon://alert' : (${entity>essentiality/_t} === 'Recommended' ? 'sap-icon://warning' : 'sap-icon://accept') }"></core:Icon>
                            </HBox>
                          </InputListItem>
                        </List>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button id="newDatasetAddButton" text="Save" icon="sap-icon://accept"/>
            <Button id="newDatasetCancelButton" text="Cancel" icon="sap-icon://cancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
