<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
                         xmlns:cust="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="joinConditionDialog" title="Add Join Condition" resizable="true" draggable="true" class="minW38rem">
        <content>
            <HBox>
                <VBox class="sapUiSmallMargin">
                    <Title text="Dataset"/>
                    <ScrollContainer id="datasetSchemaFieldSelectScroll" height="300px" vertical="true" horizontal="true" width="100%">
                        <Tree id="datasetSchemaFieldSelector" mode="SingleSelect" enableBusyIndicator="true"
                              items="{path: 'datasetSchema>/fields', parameters:{arrayNames:['children']}}">
                            <CustomTreeItem type="Active" cust:path="{datasetSchema>path}" cust:name="{datasetSchema>name}">
                                <VBox>
                                    <FormattedText htmlText="&lt;strong&gt;{datasetSchema>name}&lt;/strong&gt;"/>
                                    <Label text="type: {datasetSchema>type}; nullable: {datasetSchema>nullable}"/>
                                </VBox>
                            </CustomTreeItem>
                        </Tree>
                    </ScrollContainer>
                </VBox>
                <VBox class="sapUiSmallMargin">
                    <Title text="Mapping Table"/>
                    <ScrollContainer id="mappingTableSchemaFieldSelectScroll" height="300px" vertical="true" horizontal="true" width="100%">
                        <Tree id="mappingTableSchemaFieldSelector" mode="SingleSelect" enableBusyIndicator="true"
                              items="{path: 'mappingTableSchema>/fields', parameters:{arrayNames:['children']}}">
                            <CustomTreeItem type="Active" cust:path="{mappingTableSchema>path}" cust:name="{mappingTableSchema>name}">
                                <VBox>
                                    <FormattedText htmlText="&lt;strong&gt;{mappingTableSchema>name}&lt;/strong&gt;"/>
                                    <Label text="type: {mappingTableSchema>type}; nullable: {mappingTableSchema>nullable}"/>
                                </VBox>
                            </CustomTreeItem>
                        </Tree>
                    </ScrollContainer>
                </VBox>
            </HBox>
        </content>
        <buttons>
            <Button id="joinSubmitButton" text="Accept" icon="sap-icon://save" press=".onJoinSubmit"/>
            <Button id="joinCancelButton" text="Cancel" icon="sap-icon://cancel" press=".onJoinCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
