<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
                         xmlns:cust="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <Label text="Data can have Null values in join conditions"/>
    <CheckBox selected="{/newRule/isNullSafe}"/>
    <Label text="Join Conditions"/>
    <List mode="Delete" items="{/newRule/newJoinConditions}" delete=".onDeleteJoinCondition">
        <items>
            <CustomListItem type="Active"
                              press=".onJoinConditionSelect"
                              cust:mappingTableField="{mappingTableField}"
                              cust:datasetField="{datasetField}">
                <content>
                    <Text class="sapUiSmallMarginBegin"
                        text="{/newRule/mappingTable}.{mappingTableField} - {/currentDataset/name}.{datasetField}"/>
                </content>
            </CustomListItem>
        </items>
    </List>
    <Label text="Add Join Condition"/>
    <Button id="AddJoin" icon="sap-icon://add" press=".onAddJoinCondition"/>
</core:FragmentDefinition>
