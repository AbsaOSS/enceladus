<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="addSchemaDialog" title="{entity>/title} Schema" stretchOnPhone="true">
        <content>
            <VBox>
                <Input id="newSchemaName" type="Text" placeholder="Schema name*" width="100%" value="{entity>/name}"
                       enabled="{path:'entity>/isEdit', formatter:'Formatters.not'}"
                       change="onNameChange"/>
                <Input id="newSchemaDescription" type="Text" placeholder="Description" width="100%"
                       value="{entity>/description}"/>
            </VBox>
        </content>
        <buttons>
            <Button id="newSchemaAddButton" text="Save" icon="sap-icon://accept" press="onSchemaSubmit"/>
            <Button id="newSchemaCancelButton" text="Cancel" icon="sap-icon://cancel" press="onSchemaCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
